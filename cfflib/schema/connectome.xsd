</xsd:simpleType>

<xsd:simpleType name="descriptionFormat">
	<xsd:restriction base="xsd:string">
		<xsd:enumeration value="plaintxt"/>
		<xsd:enumeration value="rst"/>
		<xsd:enumeration value="HTML"/>
	</xsd:restriction>
